<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapEditorFragment">

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/map_editor_icon"/>


    <ImageView
        android:id="@+id/temp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="148dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintStart_toStartOf="@id/map_image"
        app:layout_constraintTop_toTopOf="@id/map_image" />


<!--    Move button to actual position -->
    <Button
        android:id="@+id/set_map"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Map"
        app:layout_constraintStart_toStartOf="@id/map_image"
        app:layout_constraintTop_toTopOf="@id/map_image" />


</androidx.constraintlayout.widget.ConstraintLayout>